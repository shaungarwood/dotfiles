# looks
background-opacity = 0.97

# tabs
keybind = ctrl+a>c=new_tab
keybind = ctrl+p=previous_tab
keybind = ctrl+n=next_tab

# splits
keybind = ctrl+a>s=new_split:down
keybind = ctrl+a>v=new_split:right
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# scrollback
keybind = ctrl+a>[=text:~/bin/my_scrollback.sh\n
keybind = shift+ctrl+;=write_screen_file:paste
keybind = ctrl+a>]=paste_from_clipboard
