# TMUX stuff
if [ "$TMUX" = "" ]; then tmux; fi

# General ZSH stuff
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
path+=("$HOME/bin")
source "$HOME/.aliases"

# Defaults
EDITOR='nvim'
GIT_EDITOR='nvim'

# Oh My ZSH stuff
export ZSH="$HOME/.oh-my-zsh"
{{- if has .chezmoi.hostname .hostnames.personal }}
ZSH_THEME="robbyrussell"
{{- else if has .chezmoi.hostname .hostnames.personal_remote }}
ZSH_THEME="xxf"
{{- else if has .chezmoi.hostname .hostnames.work }}
ZSH_THEME="afowler"
{{- else }}
ZSH_THEME="robbyrussell"
{{- end}}
plugins=(git)
source $ZSH/oh-my-zsh.sh
{{- if stat (joinPath .chezmoi.homeDir ".asdf") }}
. $HOME/.asdf/asdf.sh
{{- else if stat (joinPath "$HOMEBREW_PREFIX" "opt/asdf/libexec/asdf.sh") }}
. /opt/homebrew/opt/asdf/libexec/asdf.sh
{{- end}}
